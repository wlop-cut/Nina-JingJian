<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NINA.Resources.Styles"
    xmlns:ninactrl="clr-namespace:NINACustomControlLibrary;assembly=NINACustomControlLibrary">
    <Style TargetType="ninactrl:StepperControl">
        <Setter Property="AddSVG" Value="{StaticResource AddSVG}" />
        <Setter Property="SubstractSVG" Value="{StaticResource SubstractSVG}" />
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
        <Setter Property="ButtonForegroundBrush" Value="{StaticResource ButtonForegroundBrush}" />
    </Style>

    <Style TargetType="ninactrl:IntStepperControl">
        <Setter Property="AddSVG" Value="{StaticResource AddSVG}" />
        <Setter Property="SubstractSVG" Value="{StaticResource SubstractSVG}" />
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
        <Setter Property="ButtonForegroundBrush" Value="{StaticResource ButtonForegroundBrush}" />
    </Style>
</ResourceDictionary>