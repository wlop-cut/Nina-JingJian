                                <Path
                                    Margin="5"
                                    Data="{StaticResource MapSVG}"
                                    Stretch="Uniform"
                                    Style="{StaticResource TabItemPath}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Style="{StaticResource SideBarTextBlock}"
                                    Text="{ns:Loc LblSkyAtlas}" />
                            </Grid>
                        </TabItem.Header>
                        <TabItem.Content>
                            <view:SkyAtlasView DataContext="{Binding SkyAtlasVM}" />
                        </TabItem.Content>
                    </TabItem>-->

                    <!--<TabItem>-zhang004
                        <TabItem.Header>
                            <Grid Width="50" Height="50">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
                                <Path
                                    Margin="5"
                                    Data="{StaticResource FocusAssistantSVG}"
                                    Stretch="Uniform"
                                    Style="{StaticResource TabItemPath}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Style="{StaticResource SideBarTextBlock}"
                                    Text="{ns:Loc LblFraming}" />
                            </Grid>
                        </TabItem.Header>
                        <TabItem.Content>
                            <view:FramingAssistantView DataContext="{Binding FramingAssistantVM}" />
                        </TabItem.Content>
                    </TabItem>-->
                    

                    <!--<TabItem>-zhang005
                        <TabItem.Header>
                            <Grid Width="50" Height="50">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
